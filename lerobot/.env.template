# ============================================================================
# LeRobot CRANE-X7 Environment Variables
# Copy this file to .env and customize as needed
# ============================================================================

# --------------------------------------------------------------------------
# Hugging Face
# --------------------------------------------------------------------------
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=
HF_USER=your_username

# --------------------------------------------------------------------------
# Weights & Biases (optional)
# --------------------------------------------------------------------------
# Get your API key from: https://wandb.ai/settings
WANDB_API_KEY=
WANDB_ENABLE=false

# --------------------------------------------------------------------------
# USB Device Paths
# --------------------------------------------------------------------------
# Use `ls /dev/ttyUSB*` to find your devices
# Leader arm (for teleoperation)
USB_DEVICE_LEADER=/dev/ttyUSB0
# Follower arm (robot being controlled)
USB_DEVICE_FOLLOWER=/dev/ttyUSB1
# Single robot (for inference/calibration)
USB_DEVICE=/dev/ttyUSB0

# --------------------------------------------------------------------------
# X11 Display
# --------------------------------------------------------------------------
DISPLAY=:0
# For WSL, uncomment and set:
# WSLG_PATH=/mnt/wslg

# --------------------------------------------------------------------------
# Data Collection Settings
# --------------------------------------------------------------------------
DATASET_NAME=crane_x7_pick_place
TASK_INSTRUCTION=pick up the red block and place it in the blue bin
NUM_EPISODES=50
DISPLAY_DATA=true
PUSH_TO_HUB=false
CONTROL_FPS=30

# --------------------------------------------------------------------------
# Training Settings
# --------------------------------------------------------------------------
BATCH_SIZE=64
LEARNING_RATE=1e-4
TRAIN_STEPS=100000
SAVE_FREQ=10000
EVAL_FREQ=10000

# --------------------------------------------------------------------------
# Inference Settings
# --------------------------------------------------------------------------
POLICY_PATH=/workspace/outputs/act_crane_x7_pick_place/checkpoints/last/pretrained_model
MAX_STEPS=1000

# --------------------------------------------------------------------------
# Calibration
# --------------------------------------------------------------------------
# Type: "robot" or "teleop"
CALIBRATE_TYPE=robot

# --------------------------------------------------------------------------
# Docker User Settings
# --------------------------------------------------------------------------
# Match these to your host user for proper file permissions
USER_ID=1000
GROUP_ID=1000
USERNAME=lerobot
