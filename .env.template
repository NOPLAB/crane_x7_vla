# ============================================================================
# CRANE-X7 Environment Configuration Template
# ============================================================================
# Copy this file to .env and customize the values for your environment
#
# Usage:
#   cp .env.template .env
#   # Edit .env with your configuration
#   docker compose --profile <profile> up
# ============================================================================

# ----------------------------------------------------------------------------
# USB Device Configuration
# ----------------------------------------------------------------------------
# USB device for real robot control
# Check available devices with: ls -l /dev/ttyUSB*
USB_DEVICE=/dev/ttyUSB0

# USB device for Follower robot (when using teleop mode with 2 robots)
# Only required when running both Leader and Follower on the same machine
USB_DEVICE_FOLLOWER=/dev/ttyUSB1

# ----------------------------------------------------------------------------
# Display Configuration
# ----------------------------------------------------------------------------
# X11 display for GUI applications (RViz, Gazebo)
# For WSL2: use :0
# For native Linux: use :0 or :1 depending on your display
DISPLAY=:0

# ----------------------------------------------------------------------------
# ROS 2 Configuration
# ----------------------------------------------------------------------------
# ROS 2 Domain ID for DDS communication
# Use the same value on all machines for multi-machine teleoperation
# Valid range: 0-101 (default: 42)
ROS_DOMAIN_ID=42

# ----------------------------------------------------------------------------
# Build Configuration
# ----------------------------------------------------------------------------
# Set to "true" to clean build directories before building (slower but safer)
# Set to "false" for faster incremental builds (default)
CLEAN_BUILD=false

# ----------------------------------------------------------------------------
# User Configuration (for file permissions)
# ----------------------------------------------------------------------------
# User and group IDs to match host user (prevents permission issues)
# Get your IDs with: id -u (for USER_ID) and id -g (for GROUP_ID)
USER_ID=1000
GROUP_ID=1000
USERNAME=ros2user

